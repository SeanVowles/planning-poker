{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "lib": ["es6"],
        "allowJs": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "types": ["node", /**"jest"**/],
        "noImplicitAny": true,
        "resolveJsonModule": true,
    },
}
